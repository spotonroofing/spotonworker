{
  "$schema": "node_modules/wrangler/config-schema.json",
  // PARALLEL DEPLOYMENT: This is a clean test deployment separate from production
  "name": "spotonworker-clean",
  "main": "src/index.ts",
  "compatibility_date": "2025-05-06",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true,
  },
  // Static assets for admin UI (built by vite)
  "assets": {
    "directory": "./dist/client",
    "not_found_handling": "single-page-application",
    "html_handling": "auto-trailing-slash",
    "binding": "ASSETS",
    "run_worker_first": true,
  },
  // Allow importing HTML files as text modules and PNG files as binary
  "rules": [
    {
      "type": "Text",
      "globs": ["**/*.html"],
      "fallthrough": false,
    },
    {
      "type": "Data",
      "globs": ["**/*.png"],
      "fallthrough": false,
    },
  ],
  // Build command for vite
  "build": {
    "command": "npm run build",
  },
  // Container configuration for the Moltbot sandbox
  "containers": [
    {
      "class_name": "Sandbox",
      "image": "./Dockerfile",
      "instance_type": "standard-4",
      "max_instances": 1,
    },
  ],
  "durable_objects": {
    "bindings": [
      {
        "class_name": "Sandbox",
        "name": "Sandbox",
      },
    ],
  },
  "migrations": [
    {
      "new_sqlite_classes": ["Sandbox"],
      "tag": "v1",
    },
  ],
  // R2 bucket for persistent storage (shared with production for now)
  // Note: Uses the same bucket as production. For isolated testing, create a separate bucket.
  "r2_buckets": [
    {
      "binding": "MOLTBOT_BUCKET",
      "bucket_name": "spotonr2",
      "preview_bucket_name": "spotonr2",
    },
  ],
  // Cron trigger to sync moltbot data to R2 every 5 minutes
  "triggers": {
    "crons": ["*/5 * * * *"],
  },
  // Browser Rendering binding for CDP shim
  "browser": {
    "binding": "BROWSER",
  },
  // ============================================================================
  // SECRETS: Must be set manually for clean deployment
  // ============================================================================
  // Copy secrets from production worker:
  //   wrangler secret list --name spotonworker
  //   wrangler secret put ANTHROPIC_API_KEY --name spotonworker-clean
  //   wrangler secret put MOLTBOT_GATEWAY_TOKEN --name spotonworker-clean
  //   wrangler secret put CF_ACCESS_TEAM_DOMAIN --name spotonworker-clean
  //   wrangler secret put CF_ACCESS_AUD --name spotonworker-clean
  //   wrangler secret put R2_ACCESS_KEY_ID --name spotonworker-clean
  //   wrangler secret put R2_SECRET_ACCESS_KEY --name spotonworker-clean
  //   wrangler secret put CF_ACCOUNT_ID --name spotonworker-clean
  //
  // Or use wrangler secret:bulk to copy all at once.
}
